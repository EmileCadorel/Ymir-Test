struct
| x : i32
| mut y : i32
 -> Point;

def main ()
    throws &AssertError, &SegFault
{
    let mut point = Point (2, x-> 1);
    let (x, y) = __pragma!tupleof (point);

    assert (x == 1 && y == 2);

    let mut addrs : (&i32, dmut &i32) = alias (__pragma!field_addrs (point));
    *(addrs._1) = 9;

    assert (point.y == 9);

    let imut_addrs = __pragma!field_addrs (point);
    assert (*(imut_addrs._1) == 9);
}
